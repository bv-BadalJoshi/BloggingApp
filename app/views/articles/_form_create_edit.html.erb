<% if @article.errors.any? %>
	<h2>The following errors prevented to save your article</h2>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_with(model: @article, local: true) do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
	  <%= form.label :description, 'Article Description' %><br>
		<%= form.text_field :description %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

