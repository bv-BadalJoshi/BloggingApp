<% if flash.now[:alert] %>
	<div class="alert alert-danger" role="alert">
		<h4 class="alert-heading">It seems you did a mistake!!</h4>
		<ul>
			<li><%= flash.now[:alert] %></li>
		</ul>
	</div>
<% end %>

<%= form_with scope: :session, url: login_path, local: true do |form| %>
	<div class="form-group col-sm-10">
		<%= form.label :username %><br>
		<%= form.text_field :username, class: "form-control"%>
	</div>

	<div class="form-group col-sm-10">
		<%= form.label :password, 'Enter Password' %><br>
		<%= form.password_field :password, class: "form-control" %>
	</div>
	<p>
		<%= form.submit 'Login', class: "btn btn-primary ml-3"%>
	</p>
<% end %>

